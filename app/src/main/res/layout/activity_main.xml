<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/text_signatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_oroming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="getLaunchIntentForPackage\n启动国际上网"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_oroming_package"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="setPackage\n启动国际上网"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_find_my_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="action 启动查找手机"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_oppo_wallet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="deeplink 启动 OPPO 钱包"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_oppo_wallet3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="deeplink 启动 OPPO 钱包(添加银行卡)"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="deeplink 启动支付宝"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_tng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="deeplink 启动 TNG eWallet"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_browser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="启动浏览器"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_market"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="启动应用商店"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_dial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="启动拨号"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="启动邮件"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>